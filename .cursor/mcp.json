{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--init",
        "--security-opt",
        "seccomp=unconfined",
        "--cap-add=SYS_ADMIN",
        "-v",
        "/home/sam/Documents/Applicant_Search/claude-mcp-config/playwright-cache:/home/node/.cache",
        "-v",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        "-e",
        "DISPLAY=:1",
        "--entrypoint",
        "node",
        "playwright-mcp-firefox:local",
        "cli.js",
        "--browser",
        "firefox"
      ],
      "env": {}
    }
  }
}
